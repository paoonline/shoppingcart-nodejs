
{{# each products }}

<div class="row">
    {{# each this}}
    <div class="col-sm-12 col-md-4">
        <div class="thumbnail">
            <img src="{{ this.imagePath }}" alt="..."
                 class="img-responsive"/>
            <div class="caption">
                <h3>{{ this.title }}</h3>
                <p class="description">{{ this.description }}</p>
               <!-- {{#hidden }} <p class="description">{{ this._id }}</p> {{/hidden}} -->
                <div class="clearfix">
                    <div class="price pull-left">{{ this.price }}B </div>
                    <div align="right">
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success " role="button">Add To Cart</a>
                    <a href="/productDetail/{{this._id}}" class="btn btn-primary " role="button">Detail</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}




